generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  healthRecords HealthRecord[]
}

model HealthRecord {
  id          String   @id @default(uuid())
  date        DateTime
  sleepHours  Float
  moodScore   Int
  energyLevel Int
  workoutDone Boolean
  notes       String?
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
